{{ form_start(form) }}
	{{ form_errors(form) }}
	<br>
	<div class="row">
		<div class="col-md-7">
			{{ form_row(form.customerCode) }}
		</div>
		<div class="col-md-3">
			{{ form_row(form.birthDate) }}
		</div>
		<div class="col-md-2">
			{{ form_row(form.isActive) }}
		</div>
	</div>
	<br>
	{{ form_row(form.preferredCenter) }}
	<br>
	<div class="row">
		<div class="col-md-6">
			{{ form_row(form.firstName) }}
		</div>
		<div class="col-md-6">
			{{ form_row(form.lastName) }}
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			{{ form_row(form.email) }}
		</div>
		<div class="col-md-6">
			{{ form_row(form.nickname) }}
		</div>
	</div>
	<br>
	{{ form_row(form.password) }}{{ form_row(form.remove_password) }}
	<br>
	{{ form_row(form.phone) }}
	<br>
	{{ form_row(form.address) }}
	<div class="row">
		<div class="col-md-6">
			{{ form_row(form.zipCode) }}
		</div>
		<div class="col-md-6">
			{{ form_row(form.city) }}
		</div>
	</div>
	<br>
	{{ form_row(form.country) }}
	<br>
	<button class="btn">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
