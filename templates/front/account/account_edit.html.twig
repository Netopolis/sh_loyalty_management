{% extends 'front/account/account_index.html.twig' %}

{% block member_edit %}

{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('front/css/dropify.min.css') }}" />     
    <link rel="stylesheet" href="{{ asset('admin/css/bootstrap-toggle.min.css') }}">
{% endblock %}



{% block member_profil %}
    <div class="form_update_profil">
        <h3>Modifier mon profil</h3>
        <br>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>
        {% endfor %}
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <br>
        {{ form_row(form.nickname) }}
        <br>
        {{ form_row(form.imageProfile) }}
        <br>
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.firstName) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastName) }}
            </div>
        </div>
        <br>
        {{ form_row(form.birthDate) }}

        <br>
        {{ form_row(form.email) }}
        <br>
        {{ form_row(form.password) }}
        <br>
        {{ form_row(form.address) }}
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.zipCode) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.city) }}
            </div>
        </div>
        {{ form_row(form.country) }}
        <br>
        {{ form_row(form.phone) }}
        <br>
        {{ form_row(form.preferredCenter) }}
        <br>
        {{ form_row(form.submit, { 'label': 'Enregistrer' }) }}
        {{ form_end(form) }}
        <br><br>
    </div>
{% endblock %}

{% block final_javascripts %}
    <script src="{{ asset('front/js/dropify.min.js') }}"></script>
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    <script>
        $('.dropify').dropify({
            messages: {
                default: 'Glissez-d&eacute;posez un fichier ici ou cliquez',
                replace: 'Glissez-d&eacute;posez un fichier ou cliquez pour remplacer',
                remove:  'Supprimer',
                error:   'D&eacute;sol&eacute;, le fichier est trop volumineux'
            }
        });
    </script>
{% endblock %}