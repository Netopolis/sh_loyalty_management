{% extends 'front/account/members_form.html.twig' %}

{% set active = 'inscription' %}

{% block title %}Bienvenue !{% endblock %}


{% block members_form_content %}

    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="cadre_form">
                <h3>Devenez membre de Shinigami Laser</h3>
                <br>
                {% for message in app.flashes('notice') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {{ form_start(form) }}
                {{ form_errors(form) }}
                {{ form_row(form.nickname) }}
                <br>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.firstName) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.lastName) }}
                    </div>
                </div>
                <br>
                {{ form_row(form.birthDate) }}

                <br>
                {{ form_row(form.email) }}
                <br>
                {{ form_row(form.password) }}
                <br>
                {{ form_row(form.address) }}
                <div class="row">
                    <div class="col-md-6">
                        {{ form_row(form.zipCode) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.city) }}
                    </div>
                </div>
                {{ form_row(form.country) }}
                <br>
                {{ form_row(form.phone) }}
                <br>
                {{ form_row(form.preferredCenter) }}
                <br>
                <div class="text-center">
					{{ form_row(form.submit, { 'label': 'S\'inscrire' }) }}
				</div>
                {{ form_end(form) }}
                <br><br>
            </div>
        </div>
    </div>
	<br>
	<p class="text-center">&copy; ShiniGami Laser 2019</p>
	<br>
	<br>
{% endblock %}
