{% extends "base.html.twig" %}

{% block title %}Bienvenue{% endblock %}
{% block stylesheets %}
    <!-- Vendor -->
    <link rel="shortcut icon" href="{{ asset('images/favicon.ico') }}">
    <link href="{{ asset('admin/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('admin/css/main.css') }}" rel="stylesheet" />
    <link href="{{ asset('admin/css/shinigami.admin.css') }}" rel="stylesheet" />
    <link href="{{ asset('admin/css/font-awesome.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('admin/css/shinigami_admin_style.css') }}" rel="stylesheet" />

{% endblock %}

{% block body %}
    <!-- Wrapper -->
    <div id="wrapper">

        <!-- Main -->
        <div id="main">
            <div class="inner">
                <div class="row">
                    <div class="col-md-10"></div>
                    <div class="col-md-2 text-center">
                        <div id="infos_admin" style="margin-bottom: 0;">
                            {{ userData.firstName }} {{ userData.lastName }}<br>
                            <b>{{ userData.center }}</b>
                        </div>
                    </div>
                </div>
                <!-- Header -->
                <header id="header" style="margin-top: -50px;">
                    <h2>{% block titre_section '' %}</h2> {% block section_liens '' %}
                    &nbsp;&nbsp;
<!--
                    <ul class="icons">
                        <li><a href="#" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
                        <li><a href="#" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
                        <li><a href="#" class="icon fa-snapchat-ghost"><span class="label">Snapchat</span></a></li>
                        <li><a href="#" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
                        <li><a href="#" class="icon fa-medium"><span class="label">Medium</span></a></li>
                    </ul>
					-->
                </header>

                <!-- Banner -->
                <section id="banner">
                    <div class="content">
                        {% block content '' %}
                    </div>
                </section>

            </div>
        </div>

        <!-- Sidebar -->
        <div id="sidebar">
            <div class="inner">

                {% include 'admin/components/_nav_admin.html.twig' %}

                <!-- Search -->
                {{ render(controller(
                    'App\\Controller\\Admin\\AdminController::searchBar'
                )) }}

                <!-- Footer -->
                <footer id="footer">
                    <p class="copyright">&copy; Shinigami Laser.</p>
                </footer>

            </div>
        </div>

    </div>



{% endblock %}

{% block javascripts %}
    <!--script files-->
    <script src="{{ asset('admin/js/jquery-2.2.4.min.js' )}}" type="text/javascript"></script>
    <script src="{{ asset('admin/js/bootstrap.min.js') }}" language="JavaScript" type="text/javascript"></script>
    <script src="{{ asset('admin/js/jquery.min.js') }}" language="JavaScript" type="text/javascript"></script>
    <script src="{{ asset('admin/js/browser.min.js') }}" language="JavaScript" type="text/javascript"></script>
    <script src="{{ asset('admin/js/breakpoints.min.js') }}" language="JavaScript" type="text/javascript"></script>
    <script src="{{ asset('admin/js/util.js') }}" language="JavaScript" type="text/javascript"></script>
    <script src="{{ asset('admin/js/main.js') }}" language="JavaScript" type="text/javascript"></script>
{% endblock %}

{% block final_javascripts '' %}


